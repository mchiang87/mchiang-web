{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es6",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react",
      "baseUrl": "src"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
    ]
  }
  